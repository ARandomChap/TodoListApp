<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.c3451748.todolistapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.c3451748.todolistapp.TodoListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.c3451748.todolistapp.TodoActivity"
            android:parentActivityName="com.example.c3451748.todolistapp.TodoListActivity">
        </activity>

        <activity
            android:name="com.example.c3451748.todolistapp.TodoPagerActivity"
            android:parentActivityName="com.example.c3451748.todolistapp.TodoListActivity">
        </activity>
    </application>

</manifest>